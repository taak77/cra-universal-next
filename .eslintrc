{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true,
        "jest": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "valid-jsdoc": 2,
        "react/jsx-uses-react": 1,
        "react/jsx-no-undef": 2,
        "react/jsx-wrap-multilines": 2,
        "react/no-string-refs": 0,
        "no-console": 0
    },
    "plugins": [
        "import",
        "react"
    ]
}
